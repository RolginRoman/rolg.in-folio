---
import Logo from "./Logo.astro";
import Menu from "./Menu.astro";
import Networks from "./Networks.astro";
import { Icon } from "astro-icon";
import Emoji from "astro-emoji";
---

<footer>
  <section class="content">
    <Logo width={48} />
    <Networks />
  </section>
  <section class="menu">
    <Menu align="default" disableMobile={true} />
    <span class="tool">
      Crafted by&nbsp;<Emoji symbol="ðŸ§‘ðŸ»â€ðŸ’»" label="me" />&nbsp;and
      <a
        target="_blank"
        rel="noopener noreferrer"
        class="astro-logo-link"
        href="https://astro.build"
        aria-label="Link to Astro framework website"><Icon name="logos:astro" aria-label="Astro framework" /></a
      >
    </span>
  </section>
</footer>
<style lang="scss">
  @use "styles.scss" as utils;

  footer {
    min-height: 15vh;
    background-color: transparent; // utils.color("light");
    display: flex;
    flex-direction: column;
  }

  .content,
  .menu {
    @include utils.contentMaxWidth();
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex: 1;
  }

  .menu {
  }

  .content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-bottom: 1px solid utils.color("accent");
    color: utils.text-color(secondary);
    transition: color 0.1s cubic-bezier(0.215, 0.61, 0.355, 1);

    &:hover {
      color: utils.text-color(main);
    }
  }

  .tool {
    display: flex;
    align-items: center;
    flex: 0 0 auto;
    margin-left: 12px;
    @include utils.font(caption, s);
    color: utils.text-color(secondary);
    --theme-text: utils.text-color(main);
    --theme-accent: utils.color(accent);
    cursor: default;

    @include utils.skipIfNoMotionPrefered() {
      transition: color 0.3s cubic-bezier(0.215, 0.61, 0.355, 1);
    }

    @include utils.tablet {
      flex: 1;
      justify-content: flex-end;
      margin: 1rem 0;
    }

    &:hover {
      color: utils.text-color(main);

      & :global(path:nth-child(4)) {
        fill: utils.text-color(main);
      }
    }
  }

  .astro-logo-link {
    height: 2em;
    margin: 0 0 0 0.8em;
    padding: 0.2em;
  }

  [astro-icon="logos:astro"] {
    display: inline-block;
    height: 100%;

    & :global(path) {
      @include utils.skipIfNoMotionPrefered() {
        transition: fill 0.3s cubic-bezier(0.215, 0.61, 0.355, 1);
      }
    }

    // TODO ultra strange styling
    & :global(path:nth-child(1)) {
      fill: utils.color(dark);
    }

    & :global(path:nth-child(4)) {
      fill: utils.text-color(secondary);
    }
  }
</style>
