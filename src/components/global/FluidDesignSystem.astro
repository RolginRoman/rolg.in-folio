---
import { AstroFluidDesign, Configuration } from "@rtech-public/astro-fluid-design";

const ignoreCritters = (css: string) => {
  return `
    /* critters:include start */
    ${css}
    /* critters:include end */`;
};
const fluidDesignConfig: Configuration = {
  minViewport: {
    width: 320,
    fontSize: 34,
    typeScale: "minor-third",
  },
  maxViewport: {
    width: 1400,
    fontSize: 52,
    typeScale: "major-third",
  },
};
---

<AstroFluidDesign config={fluidDesignConfig} postprocess={ignoreCritters} injectSelector={"html"} />
