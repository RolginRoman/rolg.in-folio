<script is:inline>
  const dt = window.matchMedia("(prefers-color-scheme: dark)").matches ? "dark" : "light",
    lt = localStorage ? localStorage.getItem("theme") : void 0,
    t = lt || dt;
  "light" === t ? document.documentElement.classList.remove("dark") : document.documentElement.classList.add("dark");
</script>
