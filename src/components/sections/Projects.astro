---
const { id: nodeId } = Astro.props;
---

<section id={nodeId} class="projects">
  <h2>Projects</h2><h3>Things I've worked on in the recent past</h3>
</section>
<style lang="scss">
  @use "styles.scss" as utils;
  @include utils.centerHeaders();

  .projects {
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: 3rem 0 0;
  }
  h2 {
    margin: 1rem 0 0;
    @include utils.font(heading, m);
    color: utils.text-color("main");
  }

  h3 {
    @include utils.font(text, m);
    color: utils.text-color("main");
  }
</style>
