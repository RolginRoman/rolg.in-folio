---
import { Icon } from "astro-icon";

const { id: nodeId } = Astro.props;

const tech = [
  {
    name: "Angular",
    iconName: "logos:angular-icon",
    logo: "tech-logos/angular.svg",
  },
  {
    name: "Typescript",
    iconName: "logos:typescript-icon",
    logo: "tech-logos/typescript.svg",
  },
  {
    name: "Javascript",
    iconName: "logos:javascript",
    logo: "tech-logos/javascript.svg",
  },
  {
    name: "RxJs",
    iconName: "logos:reactivex",
    logo: "tech-logos/rxjs.svg",
  },
  {
    name: "HTML5",
    iconName: "logos:html-5",
    logo: "tech-logos/html.svg",
  },
  {
    name: "SASS/SCSS/CSS",
    iconName: "logos:sass",
    logo: "tech-logos/sass.svg",
  },
  {
    name: "Git Advanced",
    iconName: "logos:git-icon",
    logo: "tech-logos/git.svg",
  },
  {
    name: "Node.js",
    iconName: "logos:nodejs-icon",
    logo: "tech-logos/nodejs.svg",
  },
];
---

<section id={nodeId} class="intro">
  <h2>Tech</h2>
  <h3>Technologies I've been working with recently</h3>
  <ul>
    {
      tech.map((item) => (
        <li>
          <Icon
            name={item.iconName}
            aria-label={item.name}
            width="120"
            height="120"
          />
          <span class="tech-name">{item.name}</span>
        </li>
      ))
    }
  </ul>
</section>
<style lang="scss">
  @use "styles.scss" as utils;

  @keyframes animateTechName {
    0% {
      opacity: 0;
      transform: translateY(100%);
    }

    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .intro {
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: 3rem 0 2rem;
  }

  @include utils.centerHeaders();

  h2 {
    margin: 1rem 0 0;
    @include utils.font(heading, m);
    color: utils.text-color("main");
  }

  h3 {
    @include utils.font(text, m);
    color: utils.text-color("main");
  }

  ul {
    list-style: none;
    margin: 1.4rem 0;
    padding: 0;
    display: grid;
    grid-template-columns: repeat(5, 1fr);
    gap: 2rem;
    @include utils.font(caption, m);
    color: utils.text-color("secondary");
  }

  li {
    display: flex;
    flex-direction: column;
    align-items: center;

    &:hover {
      // box-shadow: #{utils.color("tertiary")} 0px 0px 0px 12px;
    }
  }

  [astro-icon] {
    border-radius: 8px;
    display: block;
    overflow: hidden;
  }

  .tech-name {
    opacity: 0;
    display: inline-block;
    margin-top: 1rem;
    cursor: default;

    li:hover & {
      animation: animateTechName 0.2s linear forwards;
    }
  }
</style>
