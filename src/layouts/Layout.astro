---
import "../styles/global.scss";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import ThemeInjector from "src/components/ThemeInjector.astro";
import FluidDesignSystem from "src/components/FluidDesignSystem.astro";

export interface Props {
  title: string;
  disableInteractions?: boolean;
}

const { title, disableInteractions = false } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <FluidDesignSystem />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700;800&display=swap" rel="stylesheet" />
    <ThemeInjector />
    <link rel="icon" type="image/svg+xml" href="favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <Header disableInteractions={disableInteractions} />
    <slot />
    <Footer />
    <style is:global lang="scss">
      @use "styles.scss" as *;

      :root {
        @include applyPalette();
        // @include applyFontFace();
      }

      html {
        font-family: "Inter", "Helvetica", sans-serif;
      }

      body {
        --header-height: 78px;

        overflow-x: hidden; //temp

        min-height: 100vh;
        display: flex;
        flex-direction: column;
        // grid-template-rows: var(--header-height) 1fr 15vh;
        background-color: color(light);

        & > *:nth-child(2) {
          flex-grow: 1;
        }

        &:before {
          content: "";
          position: absolute;
          display: flex;
          width: 100vw;
          height: 130%;
          max-height: 100vh;
          background: linear-gradient(to bottom, transparent 75%, #{color("light")}) 0% 0% / 100vw 100%,
            radial-gradient(#{color("secondary", 0.5)} 0.05em, transparent 0.05em) 0% 0% / 1vmin 1vmin;
          pointer-events: none;
          z-index: -1;
        }
      }
    </style>

    <script>
      import { matchReducedMotion } from "@/scripts/media.service";
      const onScroll = () => {
        let scroll = window.pageYOffset / (document.body.offsetHeight - window.innerHeight);
        scroll = isFinite(scroll) ? scroll : 0;
        document.body.style.setProperty("--scroll", `${scroll}`);
      };

      const handleScroll = (matches: boolean) => {
        if (!matches) {
          window.addEventListener("scroll", onScroll, false);
        } else {
          window.removeEventListener("scroll", onScroll);
        }
      };

      matchReducedMotion(handleScroll);
    </script>
  </body>
</html>
