{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "noUncheckedIndexedAccess": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "paths": {
      "@/sections/*": ["src/components/sections/*"],
      "@/blocks/*": ["src/components/blocks/*"],
      "@/global/*": ["src/components/global/*"],
      "@/layouts/*": ["src/layouts/*"],
      "@/scripts/*": ["src/scripts/*"]
    }
  }
}
